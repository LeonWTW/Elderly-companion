# Elderly Companion - Environment Variables
# Copy this file to .env and fill in the values

# MongoDB Connection
# The default works with docker-compose setup
MONGO_URI=mongodb://mongo:27017/elderly_companion_db

# OpenAI API Key (optional)
# Get your key from: https://platform.openai.com/api-keys
# The app will still work without this, but AI feedback will be unavailable
OPENAI_API_KEY=

# Flask Environment
# Set to 'development' for debug mode, 'production' for production
FLASK_ENV=development

# Secret Key (change in production!)
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-in-production
